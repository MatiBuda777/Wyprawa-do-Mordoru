<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@color/main_color"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="@string/main_header" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Podaj imię uczestnika wyprawy:"/>

                    <EditText
                        android:id="@+id/characterName_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Wybierz rasę:"/>

                    <Spinner
                        android:id="@+id/characterRace_Spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Wybierz datę wyruszenia:"/>


                    <Button
                        android:id="@+id/calendarOpen_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Wybrana data: (nie wybrano)"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Włączyć tajne ścieżki elfów?"/>

                    <Switch
                        android:id="@+id/turnOnElvesSecretPaths_Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:checked="false"
                        android:text="Nie"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Wyposażenie:"/>

                    <CheckBox
                        android:id="@+id/item_elvesCape_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Płaszcz elfów"/>

                    <CheckBox
                        android:id="@+id/item_lembases_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lembasy"/>

                    <CheckBox
                        android:id="@+id/item_torch_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pochodnia"/>
                </LinearLayout>


                <RadioGroup
                    android:id="@+id/march_RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Priorytet marszu:"/>

                    <RadioButton
                        android:id="@+id/march_hidden_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ukryty"/>

                    <RadioButton
                        android:id="@+id/march_balanced_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zbalansowany"/>

                    <RadioButton
                        android:id="@+id/march_strenous_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="forsowny"/>
                </RadioGroup>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Czas trwania marszu (w godzinach):"/>

                    <SeekBar
                        android:id="@+id/march_time_SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="1"
                        android:max="72"
                        android:progress="2" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Trening kondycyjny (licznik czasu podczas treningu):"/>

                    <Chronometer
                        android:id="@+id/Training_Chronometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Chronometer_Start_Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start"/>

                        <Button
                            android:id="@+id/Chronometer_Reset_Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reset"/>

                        <Button
                            android:id="@+id/Chronometer_Stop_Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stop" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Odliczanie do wymarszu:"/>

                    <ProgressBar
                        android:id="@+id/countdown_ProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"/>

                    <Button
                        android:id="@+id/startCountdown_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uruchom odliczanie"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Oceń morale drużyny:"/>

                    <RatingBar
                        android:id="@+id/morales_RatingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="3"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="@color/main_color"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:text="Podsumowanie"/>


                <TextView
                    android:id="@+id/summary_characterName_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="(Imię uczestnika wyprawy)"/>

                <TextView
                    android:id="@+id/summary_characterRace_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="(Rasa)"/>

                <TextView
                    android:id="@+id/summary_datetime_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="(Data i czas)"/>

                <TextView
                    android:id="@+id/summary_elvesPaths_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="(Ścieżki elfów)"/>

                <TextView
                    android:id="@+id/summary_equipment_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="Wyposażenie: (brak)"/>

                <TextView
                    android:id="@+id/summary_marchPriority_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="Priorytet marszu: (brak)"/>

                <TextView
                    android:id="@+id/summary_marchTime_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="Czas trwania marszu: 0h"/>

                <TextView
                    android:id="@+id/summary_teamMorales_TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:text="Morale drużyny: (brak)"/>


            </LinearLayout>
    </LinearLayout>

</ScrollView>